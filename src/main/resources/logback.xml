<configuration packagingData="false">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d %-5level [%thread] [%logger{0}] - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.familysearch.standards" level="warn" />
  <logger name="org.familysearch.standards.date" level="info" />
  <logger name="org.familysearch.homelands" level="debug" />
  <logger name="org.apache.solr" level="warn" />

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
